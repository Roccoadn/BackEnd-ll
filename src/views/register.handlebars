<header>
    <nav>
        <a id="logo-container" href="/">
            <img src="/img/shopynet-logo.webp" alt="ShopyNet logo">
            <span>ShopyNet</span>
        </a>
        <div id="nav-buttons">
            <button id="user-button"><a href="/login"><i class="fa-solid fa-user" style="color: #000000;"></i></a></button>
            <button id="cart-button"><i class="fa-solid fa-cart-shopping" style="color: #000000;"></i></button>
        </div>
    </nav>
</header>

<div id="main">
    <h1>Registrate</h1>
    <div id="form-container">
        <form id="registerForm">
            <label for="first-name">Nombre</label>
            <input type="text" id="first-name" name="first_name" placeholder="Nombre" required>

            <label for="last-name">Apellido</label>
            <input type="text" id="last-name" name="last_name" placeholder="Apellido" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Email" required>

            <label for="age">Edad</label>
            <input type="number" id="age" name="age" placeholder="Edad" required>

            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Contraseña" required>

            <button type="submit">Registrarme</button>
        </form>
    </div>
    <p>¿Ya estás registrado? <a href="/login">Inicia sesion acá</a></p>
</div>

<script src="js/register.js" type="module"></script>